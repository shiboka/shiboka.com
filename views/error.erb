<% content_for :head do %>
  <link rel="stylesheet" type="text/css" href="/error/style.css"/>
<% end %>
<div id="location" class="hidden"><%= location %></div>
<h1 id="title"><%= status %></h1>
<div id="content">
  <div id="inner-content">
    <span><%= location == "client" ? "Client Error" : "Server Error" %></span>
    <hr style="width: 70%;"/>
    <div id="player-container" onClick="toggleAudio()" title="DANCE!!!">
      <img id="player-img" src="/img/<%= location == "client" ? "rumia" : "akarin" %>.gif"/>
      <audio id="player"></audio>
      <br/>
      <progress id="seekbar" value="0" max="1"></progress>
    </div>
  </div>
</div>

<script type="text/javascript" src="/error/index.js"></script>